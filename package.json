{
  "name": "@ben-elan/calcite-codemod",
  "version": "2.0.0",
  "description": "Codemod scripts for automatically updating after breaking changes to Calcite Design System",
  "license": "MIT",
  "author": "Ben Elan",
  "main": "./dist/index.js",
  "bin": {
    "calcite-codemod": "./dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "esbuild ./src/index.js --outdir=./dist --bundle --format=cjs --minify --platform=node",
    "postbuild": "npm run copy-assets",
    "copy-assets": "cp -r ./assets/legacy-tokens.css ./dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "esbuild": "^0.19.8",
    "replace-in-file": "^7.0.2"
  },
  "volta": {
    "node": "20.10.0"
  }
}
